<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :major %>
    <%= f.text_field :major %>

    <%= f.collection_select :instructor_id, @instructors, :id, :name %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
<% end %>